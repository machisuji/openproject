<p><%= form.text_field :name, :required => true, :size => 60 %></p>

<% unless project.allowed_parents.compact.empty? %>
  <p>
    <%= label(:project, :parent_id, Project.human_attribute_name(:parent)) %>
    <%= parent_project_select_tag(project) %>
  </p>
<% end %>

<p><%= form.text_area :summary, :rows => 2, :class => 'wiki-edit' %></p>
<p><%= form.text_area :description, :rows => 5, :class => 'wiki-edit' %></p>
<%= wikitoolbar_for 'project_description' %>

<p>
  <%= form.text_field :identifier, :required => true, :size => 60, :disabled => project.identifier_frozen? %>
  <% unless project.identifier_frozen? %>
    <script type="text/javascript" charset="utf-8">
      projectIdentifierMaxLength = <%= Project::IDENTIFIER_MAX_LENGTH %>;
      projectIdentifierDefault = '<%= project.identifier %>';
      projectIdentifierLocked = <%= !project.identifier.blank? %>;
      observeProjectIdentifier();
      observeProjectName();
    </script>
    <br />
    <em>
      <%= l(:text_length_between, :min => 1, :max => Project::IDENTIFIER_MAX_LENGTH) %>
      <%= l(:text_project_identifier_info).html_safe %>
    </em>
  <% end %>
</p>
<p><%= form.text_field :homepage, :size => 60 %></p>
<p><%= form.check_box :is_public %></p>

<% project.custom_field_values.each do |value| %>
  <p><%= custom_field_tag_with_label :project, value %></p>
<% end %>